<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailFood">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="#FF9385"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ArrowBack"
                    android:layout_width="20dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_arrow_left" />

                <TextView
                    android:id="@+id/NameFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="29dp"
                    android:text="Mixed salades"
                    android:textColor="#FFFFFF"
                    android:textSize="22dp" />

                <ImageView
                    android:id="@+id/tymFood"
                    android:layout_width="20dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="130dp"
                    android:src="@drawable/ic_heart2" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="19dp"
                android:text="Nutritional ingredients"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_target"
                app:cardCornerRadius="30dp"
                app:cardElevation="8dp">

                <TextView
                    android:id="@+id/calory_minute_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="319 calo/ 100 gram"
                    android:textSize="17dp"
                    android:textColor="#C3C3C3"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="17dp"
                android:background="@drawable/button_target"
                app:cardCornerRadius="30dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="356dp"
                    android:layout_height="222dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/FoodPicture"
                        android:layout_width="222dp"
                        android:layout_height="223dp"
                        android:src="@color/black"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9dp"
                            android:layout_marginTop="45dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="17dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/circle_button"
                                android:backgroundTint="#1592F0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="Carbs"
                                android:textSize="17dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/gramCarbsFood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:text="49.3 g"
                            android:textSize="17dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="2dp">

                            <ImageView
                                android:layout_width="17dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/circle_button"
                                android:backgroundTint="#F8B453" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="Protein"
                                android:textSize="17dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/gramProteinFood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:text="2.3 g"
                            android:textSize="17dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9dp"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="17dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/circle_button"
                                android:backgroundTint="#835CEC" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="Fat"
                                android:textSize="17dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/gramFatFood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:text="35.3 g"
                            android:textSize="17dp" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="19dp"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="21dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/foodDesciption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a type of dish originating from European countries, this is a mixed dish that includes many different ingredients and has many different types; mainly processed from raw vegetables and salads, noodles, legumes, eggs, meat, seafood and fruits."
                    android:layout_margin="10dp"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="#767B75"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="19dp"
                android:text="How to cook?"
                android:textColor="@color/black"
                android:textSize="21dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/food_How_to_cook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Wash the tomatoes and cucumbers and cut them into thin pieces
                    -Wash the lettuce and put it on a plate.
-Pour the tomatoes and cucumbers on top of the salad and add the oil, chili, vinegar, and sugar.
-Mix well, then add coriander."
                    android:layout_margin="10dp"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="#767B75"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="19dp"
                android:text="Daily Goals"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="17dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="348dp"
                android:layout_height="123dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_marginTop="19dp"
                        android:layout_marginLeft="16dp"
                        android:layout_width="75dp"
                        android:layout_height="3dp"
                        android:background="#F7B353"></LinearLayout>

                    <TextView
                        android:id="@+id/dailyProtein"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25 % Protein"
                        android:textSize="14dp"
                        android:textColor="#7E7575"
                        android:layout_marginLeft="16dp"
                        />

                    <LinearLayout
                        android:layout_marginTop="19dp"
                        android:layout_marginLeft="16dp"
                        android:layout_width="80dp"
                        android:layout_height="3dp"
                        android:background="#825DEA"></LinearLayout>

                    <TextView
                        android:id="@+id/dailyFat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30 % Fat"
                        android:textSize="14dp"
                        android:textColor="#7E7575"
                        android:layout_marginLeft="16dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="95dp"
                        android:layout_height="3dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="19dp"
                        android:background="#0A93E8"></LinearLayout>

                    <TextView
                        android:id="@+id/dailyCarbs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45 % Carbs"
                        android:textSize="14dp"
                        android:textColor="#7E7575"
                        android:layout_marginLeft="16dp"
                        />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/TvHowToBurnOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="19dp"
                android:text="How to burn out 525 Kcal"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="17dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="348dp"
                    android:layout_height="123dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/NumberMinuteToBurnAc1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="53"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#db4831"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Minutes"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="#db4831"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Swimming"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginTop="17dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/NumberMinuteToBurnAc2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="158"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#db4831"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Minutes"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="#db4831"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Walk"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginTop="17dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/NumberMinuteToBurnAc3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="79"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#db4831"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Minutes"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="#db4831"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ride a Bike"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginTop="17dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/NumberMinuteToBurnAc4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="105"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#db4831"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Minutes"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="#db4831"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Run"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginTop="17dp"/>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/bottom_nav"
        app:menu="@menu/menu_bottom_nav"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        />
</LinearLayout>