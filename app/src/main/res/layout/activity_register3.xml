<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Register3Activity">

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="120dp"
        android:text="What is your target?"
        android:textColor="#45D14A"
        android:textSize="25dp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/loseWeightButton"
        android:layout_width="285dp"
        android:layout_height="90dp"
        android:layout_below="@id/TextView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#F6B5B5"
        android:text="Losing Weight"
        android:textColor="#2D632B"
        android:textSize="24dp" />

    <Button
        android:id="@+id/keepWeightButton"
        android:layout_width="285dp"
        android:layout_height="90dp"
        android:layout_below="@id/loseWeightButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#F6B5B5"
        android:text="Keep Weight"
        android:textColor="#2D632B"
        android:textSize="24dp" />

    <Button
        android:id="@+id/gainWeight"
        android:layout_width="285dp"
        android:layout_height="90dp"
        android:layout_below="@id/keepWeightButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#F6B5B5"
        android:text="Gain Weight"
        android:textColor="#2D632B"
        android:textSize="24dp" />

    <Button
        android:id="@+id/registerButton2"
        android:layout_width="285dp"
        android:layout_height="77dp"
        android:layout_below="@id/gainWeight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:backgroundTint="#FF9386"
        android:text="Next"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/registerTextView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Don't have an account?"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_below="@id/registerButton2"/>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Log In"
        android:textColor="#52BC41"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/registerTextView8"
        android:backgroundTint="@color/white"/>

</RelativeLayout>