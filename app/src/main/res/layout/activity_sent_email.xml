<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Sent_Email_Activity">

    <TextView
        android:id="@+id/viewChatWithUsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="Chat With Us"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignParentTop = "true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="272dp"
        android:layout_height="270dp"
        android:layout_below="@+id/viewChatWithUsText"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="68dp"
        android:src="@drawable/sent_email" />

    <TextView
        android:id="@+id/viewChatWithUsText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="50dp"
        android:text="Message Sent"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/viewChatWithUsText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewChatWithUsText2"
        android:text="Write us an email about anything"
        android:textColor="@color/black"
        android:textSize="19dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        />

    <TextView
        android:id="@+id/viewChatWithUsText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewChatWithUsText3"
        android:text="and we'll get back to you within 3 days"
        android:textColor="@color/black"
        android:textSize="19dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        />

    <Button
        android:id="@+id/backButton"
        android:layout_width="285dp"
        android:layout_height="77dp"
        android:layout_below="@id/viewChatWithUsText4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:backgroundTint="#FF9386"
        android:text="Back to home"
        android:textSize="24sp" />

    <!-- Menu -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/bottom_nav2"
        app:menu="@menu/menu_bottom_nav"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        />

</RelativeLayout>