<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Subcriptions_Activity">

    <TextView
        android:id="@+id/viewSubTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="Subcriptions"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignParentTop = "true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/imageUserView"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/viewSubTextView1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/viewUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageUserView"
        android:layout_marginLeft="50dp"
        android:text="User Name"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/premiumButton"
        android:layout_width="324dp"
        android:layout_height="240dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="30dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_target"
        android:layout_below="@+id/viewUserName">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Premium Features"
            android:textColor="#577752"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unlimited Favorites"
            android:textColor="#577752"
            android:textSize="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="80dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unlimited Search Feature"
            android:textColor="#577752"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="-24dp"
            android:layout_marginTop="130dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Access To Activity Feature"
            android:textColor="#577752"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="180dp"/>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/buyButton"
        android:layout_width="285dp"
        android:layout_height="77dp"
        android:layout_below="@+id/premiumButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="#FF9386"
        android:text="Buy Premium"
        android:textSize="30sp"/>


    <!-- Menu -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/bottom_nav2"
        app:menu="@menu/menu_bottom_nav"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        />

</RelativeLayout>