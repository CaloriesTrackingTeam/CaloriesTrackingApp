<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".User_Setting_Activity">

    <TextView
        android:id="@+id/viewSettingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="Setting"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignParentTop = "true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/modeImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_mod_setting"
        android:layout_below="@id/viewSettingText"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        />
    <Button
        android:id="@+id/modeButton"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:layout_below="@+id/viewSettingText"
        android:layout_toRightOf="@id/modeImage"
        android:backgroundTint="@color/white"
        android:text="Dark Mode"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="left|center_vertical"
        android:layout_marginTop="30dp"
        />

    <ImageView
        android:id="@+id/locationImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_location_setting"
        android:layout_below="@id/modeImage"
        android:layout_marginLeft="50dp"
        />
    <Button
        android:id="@+id/locationButton"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:layout_below="@+id/modeButton"
        android:layout_toRightOf="@id/locationImage"
        android:backgroundTint="@color/white"
        android:text="Location"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="left|center_vertical"
        />

    <ImageView
        android:id="@+id/notiImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_notification_setting"
        android:layout_below="@id/locationImage"
        android:layout_marginLeft="50dp"
        />
    <Button
        android:id="@+id/notiButton"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:layout_below="@+id/locationButton"
        android:layout_toRightOf="@id/notiImage"
        android:backgroundTint="@color/white"
        android:text="Notification"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="left|center_vertical"
        />

    <ImageView
        android:id="@+id/helpCenterImage2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_help_center"
        android:layout_below="@id/notiImage"
        android:layout_marginLeft="50dp"
        />
    <Button
        android:id="@+id/helpCenterButton2"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:layout_below="@+id/notiButton"
        android:layout_toRightOf="@id/helpCenterImage2"
        android:backgroundTint="@color/white"
        android:text="Help Center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="left|center_vertical"
        />

    <ImageView
        android:id="@+id/logOutImage2"
        android:layout_width="40dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_log_out"
        android:layout_below="@id/helpCenterImage2"
        android:layout_marginLeft="69dp"
        />
    <Button
        android:id="@+id/logOutButton2"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:layout_below="@+id/helpCenterButton2"
        android:layout_toRightOf="@id/logOutImage2"
        android:backgroundTint="@color/white"
        android:text="Log Out"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="left|center_vertical"
        android:layout_marginLeft="10dp"
        />

    <!-- Menu -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:menu="@menu/menu_bottom_nav"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        />


</RelativeLayout>